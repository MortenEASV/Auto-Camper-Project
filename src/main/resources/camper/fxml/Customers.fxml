<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="camper.controller.CustomersController">
   <left>
      <VBox prefHeight="750.0" prefWidth="221.0" BorderPane.alignment="CENTER">
         <children>
            <Label maxWidth="150.0" text="Customer First Name">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fldCustomerFirstName" maxWidth="150.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="150.0" text="Customer Last Name">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fldCustomerLastName" maxWidth="150.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="150.0" text="Customer ID">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fldCustomerID" maxWidth="150.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="150.0" text="Customer Address">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fldCustomerAddress" maxWidth="150.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="150.0" text="Customer Phone Number">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fldCustomerPhoneNo" maxWidth="150.0">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" text="Reset">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <TableView fx:id="viewTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colID" prefWidth="83.0" text="ID" />
          <TableColumn fx:id="colFirstName" prefWidth="99.0" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="99.0" text="Last Name" />
            <TableColumn fx:id="colPhoneNo" prefWidth="95.0" text="Phone Number" />
            <TableColumn fx:id="colCountryName" prefWidth="97.0" text="Country Name" />
            <TableColumn fx:id="colCityPostalCode" prefWidth="107.0" text="City Postal Code" />
            <TableColumn fx:id="colCityName" prefWidth="106.0" text="City Name" />
            <TableColumn fx:id="colStreet" prefWidth="106.0" text="Street" />
            <TableColumn fx:id="colAptNumber" prefWidth="148.0" text="Apartment Number" />
            <TableColumn fx:id="colFloor" prefWidth="57.0" text="Floor" />
        </columns>
      </TableView>
   </center>
   <top>
      <BorderPane prefHeight="50.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
         <right>
            <HBox alignment="CENTER" prefHeight="50.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnNewCustomer" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="New Customer">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnDeleteCustomer" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Delete Customer">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </right>
      </BorderPane>
   </top>
</BorderPane>
